{
    "name": "Neuronex Array Searcher",
    "version": "1.0",
    "description": "Searching on web page by array. Very useful with data from Google Sheets or Microsoft Excel",
    "host_permissions": ["http://*/*", "https://*/*"],
    "permissions": ["storage", "declarativeContent", "activeTab"],
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "images/logo.png",
            "32": "images/logo.png",
            "48": "images/logo.png",
            "128": "images/logo.png"
        }
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": ["<all_urls>"],
            "js": ["src/contentScripts/hotkey.js", "src/contentScripts/searchEngine.js", "src/contentScripts/result.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "src/background/index.js"
    },
    "manifest_version": 3
}
